<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C5CAE9"
    tools:context="cs4720.cs.virginia.edu.cs4720androidproject.Dashboard"
    android:id="@+id/dashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dashboard"
        android:id="@+id/dashboardView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#212121"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Location:"
        android:id="@+id/currentLocationLabel"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/dashboardView"
        android:layout_toLeftOf="@+id/dashboardView"
        android:layout_toStartOf="@+id/dashboardView"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The 7th Circle"
        android:id="@+id/currentLocationView"
        android:layout_alignTop="@+id/currentLocationLabel"
        android:layout_toRightOf="@+id/currentLocationLabel"
        android:layout_toEndOf="@+id/currentLocationLabel"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Conditons:"
        android:id="@+id/conditionsLabel"
        android:layout_below="@+id/currentLocationLabel"
        android:layout_alignLeft="@+id/currentLocationLabel"
        android:layout_alignStart="@+id/currentLocationLabel"
        android:layout_marginTop="36dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Freezing"
        android:id="@+id/conditionsView"
        android:layout_alignTop="@+id/conditionsLabel"
        android:layout_alignLeft="@+id/currentLocationView"
        android:layout_alignStart="@+id/currentLocationView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Closest Mission:"
        android:id="@+id/closestMissionLabel"
        android:layout_below="@+id/conditionsLabel"
        android:layout_alignLeft="@+id/conditionsLabel"
        android:layout_alignStart="@+id/conditionsLabel"
        android:layout_marginTop="36dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jumping Into the Pit"
        android:id="@+id/closestMissionView"
        android:layout_alignTop="@+id/closestMissionLabel"
        android:layout_alignLeft="@+id/conditionsView"
        android:layout_alignStart="@+id/conditionsView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherIcon"
        android:layout_alignTop="@+id/conditionsView"
        android:layout_toRightOf="@+id/conditionsView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wundergroundlogo"
        android:src="@drawable/wunderground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
