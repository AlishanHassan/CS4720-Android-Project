<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C5CAE9"
    tools:context="cs4720.cs.virginia.edu.cs4720androidproject.Dashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dashboard"
        android:id="@+id/dashboardView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#212121"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Location"
        android:id="@+id/currentLocation"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/dashboardView"
        android:layout_toLeftOf="@+id/dashboardView"
        android:layout_toStartOf="@+id/dashboardView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latitude"
        android:id="@+id/latitudeView"
        android:layout_alignTop="@+id/currentLocation"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Longitude"
        android:id="@+id/longitudeView"
        android:layout_alignTop="@+id/latitudeView"
        android:layout_toRightOf="@+id/dashboardView"
        android:layout_toEndOf="@+id/dashboardView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temperature:"
        android:id="@+id/temperatureLabel"
        android:layout_below="@+id/currentLocation"
        android:layout_alignLeft="@+id/currentLocation"
        android:layout_alignStart="@+id/currentLocation"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100 K"
        android:id="@+id/temperatureView"
        android:layout_alignTop="@+id/temperatureLabel"
        android:layout_alignLeft="@+id/dashboardView"
        android:layout_alignStart="@+id/dashboardView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Supernova"
        android:id="@+id/conditionsView"
        android:layout_alignTop="@+id/temperatureView"
        android:layout_alignRight="@+id/longitudeView"
        android:layout_alignEnd="@+id/longitudeView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Closest Mission"
        android:id="@+id/closestMissionLabel"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/temperatureLabel"
        android:layout_alignLeft="@+id/temperatureLabel"
        android:layout_alignStart="@+id/temperatureLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jumping in a pit."
        android:id="@+id/closestMissionView"
        android:layout_alignTop="@+id/closestMissionLabel"
        android:layout_toRightOf="@+id/temperatureView"
        android:layout_toEndOf="@+id/temperatureView" />

</RelativeLayout>
