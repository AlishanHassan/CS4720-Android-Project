<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cs4720.cs.virginia.edu.cs4720androidproject.About"
    android:id="@+id/aboutlayout"
    android:background="#0054FF">

    <TextView android:text="Your Quest" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/abouttitle"
        android:textSize="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:textColor="#FFFF00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pursue the world&apos;s treasures. Travel and accomplish greatness. Complete missions and become the most eminent being to set foot on our Earth. "
        android:id="@+id/Description"
        android:layout_marginTop="59dp"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:layout_below="@+id/abouttitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.2"
        android:id="@+id/versionnumber"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your location information is gathered. That&apos;s kind of the point. This information is used by Mission  Quest to determine if you&apos;ve fulfilled the requirements of a given mission. We, the overlords, don&apos;t  keep any of this data, everything is stored locally. Even if we did collect data we would only use  it to mock your incompetence. However, because location data requires Google Play Services, Google  will be getting your location information. They will probably use it for nefarious purposes. You  have been warned. "
        android:id="@+id/privacyPolicyText"
        android:layout_below="@+id/privacyPolicyHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Privacy Policy"
        android:id="@+id/privacyPolicyHeader"
        android:layout_below="@+id/Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textColor="#FFFFFF" />

</RelativeLayout>
