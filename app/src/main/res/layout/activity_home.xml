<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:id="@+id/foo"
    android:background="@drawable/homebackground">

    <Button
        android:id="@+id/availablemissionsbutton"

        android:text="Available Missions"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="458dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/dashboardbutton"
        android:layout_alignLeft="@+id/dashboardbutton"
        android:layout_alignStart="@+id/dashboardbutton" />

    <Button
        android:id="@+id/dashboardbutton"

        android:text="Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="458dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/aboutbutton"

        android:text="About"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="458dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/dashboardbutton"
        android:layout_alignLeft="@+id/dashboardbutton"
        android:layout_alignStart="@+id/dashboardbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:layout_toRightOf="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/mLatitudeText"
        android:textSize="16dp"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/aboutbutton"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/mLongitudeText"
        android:textSize="16dp"
        android:layout_alignTop="@+id/mLatitudeText"
        android:layout_toLeftOf="@+id/scoreView"
        android:layout_toStartOf="@+id/scoreView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Points:"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_above="@+id/availablemissionsbutton"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/scoreView"
        android:textSize="40dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Coordinates"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_above="@+id/mLongitudeText"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
